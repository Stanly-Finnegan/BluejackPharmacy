<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:layout_margin="10dp"
    android:background="@drawable/button_blank_background">

    <ImageView
        android:id="@+id/img_obat"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/sanmol_tablet"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/img_obat"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_obat">

        <TextView
            android:id="@+id/nama_obat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Obat"
            android:textSize="18sp"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/manuf_obat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Manufaktur Obat"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tipe_obat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:text="Ket Obat"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/harga_obat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginTop="10dp"
            android:text="harga Obat"
            android:textSize="20sp"
            android:textStyle="bold"/>
    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>